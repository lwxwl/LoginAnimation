<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 获得焦点时的背景 -->
    <item android:state_focused="true">
        <layer-list>
            <item
                android:bottom="1dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape android:shape="rectangle">
                    <!-- 描边 -->
                    <stroke
                        android:width="1dp"
                        android:color="#2fa881" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- 点击时的背景 -->
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:bottom="1dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#2fa881" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- 默认 -->
    <item >
        <layer-list>
            <item
                android:bottom="1dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="0.5dp"
                        android:color="#c5c5c5" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>